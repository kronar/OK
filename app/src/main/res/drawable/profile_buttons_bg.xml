<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/profile_button_bg_color_pressed" />
            <stroke android:width="1.0dip" android:color="@color/profile_button_stroke_pressed" />
            <corners android:radius="3.0dip" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/profile_button_bg_color_un_enabled" />
            <stroke android:width="1.0dip" android:color="@color/profile_button_stroke_color_un_enabled" />
            <corners android:radius="3.0dip" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/profile_button_bg_color" />
            <stroke android:width="1.0dip" android:color="@color/profile_button_stroke_color" />
            <corners android:radius="3.0dip" />
        </shape>
    </item>
</selector>