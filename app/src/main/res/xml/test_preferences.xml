    <PreferenceCategory android:title="@string/test_check_update_category">
        <CheckBoxPreference android:title="@string/test_check_update_always_title" android:key="test_check_update_always" android:defaultValue="false" android:summaryOn="@string/test_check_update_always_summary_on" android:summaryOff="@string/test_check_update_always_summary_off" />
        <CheckBoxPreference android:title="@string/test_show_update_always_title" android:key="test_show_update_always" android:defaultValue="false" android:summaryOn="@string/test_show_update_always_summary_on" android:summaryOff="@string/test_show_update_always_summary_off" />
