        <CheckBoxPreference android:title="@string/test_pref_mt_allow_check_restricted_title" android:key="@string/test_pref_mt_allow_check_restricted_key" android:defaultValue="false" android:summaryOn="@string/test_pref_mt_allow_check_restricted_summary_on" android:summaryOff="@string/test_pref_mt_allow_check_restricted_summary_off" />
        <CheckBoxPreference android:title="@string/test_pref_mt_dont_enforce_limits_title" android:key="@string/test_pref_mt_dont_enforce_limits_key" android:defaultValue="false" android:summaryOn="@string/test_pref_mt_dont_enforce_limits_summary_on" android:summaryOff="@string/test_pref_mt_dont_enforce_limits_summary_off" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/stream">
        <CheckBoxPreference android:title="@string/debug_mode" android:key="test_stream_debug_mode" android:defaultValue="false" android:summaryOn="@string/stream_debug_mode_summary_on" android:summaryOff="@string/stream_debug_mode_summary_off" />
