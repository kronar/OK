        <ru.ok.android.utils.IntListPreference android:entries="@array/deep_link_names" android:title="@string/deep_link_type_title" android:key="deep.link.type" android:defaultValue="0" android:entryValues="@array/deep_link_values" />
        <EditTextPreference android:title="@string/deep_link_url_title" android:key="deep.link.url" android:dialogTitle="@string/deep_link_url_title" />
        <EditTextPreference android:title="@string/deep_link_install_url_title" android:key="deep.link.install.url" android:dialogTitle="@string/deep_link_install_url_title" />
